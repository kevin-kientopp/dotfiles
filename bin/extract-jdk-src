#!/bin/bash
# Copies jdk src.zip to specified dir, extracts it, and cleans up after itself

if [[ $# -ne 1 ]]; then
  echo "Usage: $(basename "$0") outdir" >&2
  exit 1
fi

out_dir="$1/jdk8"
mkdir -p "$out_dir"

cd "$out_dir" 
cp ~/.sdkman/candidates/java/current/src.zip .
unzip src.zip
rm src.zip 

